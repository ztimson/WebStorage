{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2020",
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src"
  ]
}
